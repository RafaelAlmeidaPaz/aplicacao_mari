@model WebApplication1.Models.Ingresso

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Nome do cliente</label>
                <input asp-for="NomeCliente"  class="form-control" />
                <span asp-validation-for="NomeCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  class="control-label">Nº de dias</label>
                <input asp-for="NroDias" type="number" class="form-control" />
                <span asp-validation-for="NroDias" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Valor</label>
                <input asp-for="ValorBasico" type="number" class="form-control" />
                <span asp-validation-for="ValorBasico" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
