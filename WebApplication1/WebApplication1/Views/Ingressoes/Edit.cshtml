@model WebApplication1.Models.Ingresso

@{
    ViewData["Title"] = "Edit";
}

<h2>Editar</h2>

<h4>Ingresso</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label  class="control-label">Nome do cliente</label>
                <input asp-for="NomeCliente" class="form-control" />
                <span asp-validation-for="NomeCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  class="control-label">Qtd. Dias</label>
                <input asp-for="NroDias" class="form-control" />
                <span asp-validation-for="NroDias" type="number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Valor</label>
                <input asp-for="ValorBasico" class="form-control" />
                <span asp-validation-for="ValorBasico" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
